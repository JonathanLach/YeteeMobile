<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >
    <TextView android:id="@+id/subscritionId" android:layout_width="50dp" android:layout_height="50dp" />

    <TextView
        android:id="@+id/subscritionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/subscritionId"
        android:layout_marginStart="71dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Pseudo" />

    <TextView
        android:id="@+id/subscritionCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/subscritionId"
        android:layout_marginEnd="89dp"
        android:textColor="@android:color/black"
        tools:text="Texte de mon tweet" />
</RelativeLayout>